generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  email     String    @unique
  firstname String    @default("none")
  lastname  String    @default("none")
  password  String
  isAdmin   Boolean   @default(false)
  sessions  Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
